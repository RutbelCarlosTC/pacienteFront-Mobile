<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Campo para ingresar el DNI -->
    <EditText
        android:id="@+id/etDni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese su DNI"
        android:inputType="number" />

    <!-- BotÃ³n para buscar al paciente -->
    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:layout_gravity="center_horizontal"
        android:marginTop="16dp" />

    <!-- Texto para mostrar los datos del paciente -->
    <TextView
        android:id="@+id/tvDatosPaciente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Datos del Paciente:"
        android:textStyle="bold"
        android:layout_marginTop="24dp" />

    <!-- HCN -->
    <TextView
        android:id="@+id/tvHcn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="H. C. N.: " />

    <!-- A. Paterno -->
    <TextView
        android:id="@+id/tvPaterno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A. Paterno: " />

    <!-- A. Materno -->
    <TextView
        android:id="@+id/tvMaterno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A. Materno: " />

    <!-- Nombre -->
    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre: " />

</LinearLayout>